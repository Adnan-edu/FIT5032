@model AssignmentFIT5032.Models.BulkEmailViewModel
@{
    ViewBag.Title = "Send_BulkEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send_BulkEmail</h2>

@using (Html.BeginForm("Send_BulkEmail", "Hotels", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="ToEmail" class="col-sm-2 control-label">Email To</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="ToEmail" name="ToEmail" placeholder="Email To" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="Subject" class="col-sm-2 control-label">Subject</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Subject" name="Subject" placeholder="Subject" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="Contents" class="col-sm-2 control-label">Contents</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="4" name="Contents"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="file" class="custom-file-input" name="AttachedFile" id="AttachedFile">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
        @ViewBag.Message
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

