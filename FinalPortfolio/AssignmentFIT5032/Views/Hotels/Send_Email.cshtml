@model AssignmentFIT5032.Models.SendEmailViewModel

@{
    ViewBag.Title = "Send_Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send_Email</h2>


@using (Html.BeginForm("Send_Email", "Hotels", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>

            <input type="text" class="form-control" name="ToEmail" id="ToEmail" placeholder="Email To">
        </div>
        <div class="form-group">
            <label for="model">Subject</label>
            <input type="text" class="form-control" name="Subject" id="Subject" placeholder="Subject">
        </div>
        <div class="custom-file">

            <input type="file" class="custom-file-input" name="AttachedFile" id="AttachedFile">
            
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
        @ViewBag.Message
    </form>


}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
